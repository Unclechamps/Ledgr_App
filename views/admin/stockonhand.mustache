<h1>Stock On Hand</h1>
<div class="container">
    <div class="row">
        <table>
            <thead>
                <tr>
                    <th>Remove</th>
                    <th>Category</th>
                    <th>Item</th>
                    <th>Size</th>
                    <th>Price</th>
                    <th>Color</th>
                    <th>Quantity</th>
                    <th>Restock</th>
                </tr>
            <thead>
            <tbody>
                {{#list}}
                    <tr>
                        <td><a class="btn-floating btn-small waves-effect waves-light modal-trigger" href="#deleteModal"><i class="material-icons">delete_forever</i><a></td>
                        <td>{{productcategories.productGender}} {{productcategories.productCategory}}</td>
                        <td>{{productName}}</td>
                        <td>{{productSize}}</td>
                        <td>{{productPrice}}</td>
                        <td>{{productColor}}</td>
                        <td>{{productQuantity}}</td>
                        <td>
                        <form action="/modify" method="post">
                        <input type="hidden" name="quantity" value="{{productQuantity}}">
                        <input type="hidden" name="productID" value="{{id}}">
                        <input type="number" name="amtChange" size="2" />
                        <button type="submit" name="action" value="add" class="btn-floating btn-small waves-effect waves-light"><i class="material-icons">add</i></button>
                        <button type="submit" name="action" value="remove" class="btn-floating btn-small waves-effect waves-light"><i class="material-icons">remove</i></button></form></td>
                    </tr>
                {{/list}}
            </tbody>
        </table>
    </div>
</div>


<div id="deleteModal"class="modal">
    <div class="modal-content">
        <h4>Are you sure?</h4>
        <p>This action will permanently delete this item from your inventory. Are you sure that you would like to continue?</p>
    </div>
    <div class="modal-footer">
        <a href="#!" class="delete waves-effect waves-green btn-flat">Delete</a>
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Cancel</a>
    </div>
