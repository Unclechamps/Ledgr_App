<h1>Stock On Hand</h1>
<div class="container">
    <div class="row">
        <table>
            <thead>
                <tr>
                    <th>Remove</th>
                    <th>Category</th>
                    <th>Item</th>
                    <th>Size</th>
                    <th>Price</th>
                    <th>Color</th>
                    <th>Quantity</th>
                    <th>Restock</th>
                </tr>
            <thead>
            <tbody>
                {{#list}}
                    <tr>
                        <td>
                            <a class="btn-floating btn-small waves-effect waves-light modal-trigger" href="#modal1"><i class="material-icons">delete</i></a>
                            <div id="modal1" class="modal">
                                <div class="modal-content">
                                    <h4>Are you sure?</h4>
                                    <p>This will permanently delete this product from your inventory. Do you want to continue?</p>
                                </div>
                                <div class="modal-footer">
                                <form action='/deleteproduct' method='POST'>
                                    <input type="hidden" name="id" value={{id}} />
                                    <button type="submit" value="Delete" class="waves-effect btn-flat waves-light">Delete</button>  
                                    <a href="#!" class="modal-close waves-effect btn-flat waves-light">Cancel</a> 
                                </form>
                                    





                                <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
                                </div>
                            </div>



                            
                        </td>
                        <td>{{productcategories.productGender}} {{productcategories.productCategory}}</td>
                        <td>{{productName}}</td>
                        <td>{{productSize}}</td>
                        <td>{{productPrice}}</td>
                        <td>{{productColor}}</td>
                        <td>{{productQuantity}}</td>
                        <td>
                        <form action="/modify" method="post">
                        <input type="hidden" name="quantity" value="{{productQuantity}}">
                        <input type="hidden" name="productID" value="{{id}}">
                        <input type="number" name="amtChange" size="2" />
                        <button type="submit" name="action" value="add" class="btn-floating btn-small waves-effect waves-light"><i class="material-icons">add</i></button>
                        <button type="submit" name="action" value="remove" class="btn-floating btn-small waves-effect waves-light"><i class="material-icons">remove</i></button></form></td>
                    </tr>
