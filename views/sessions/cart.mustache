<div class="ledgrTable container">
  <h3>Shopping Cart</h3>
  <table>
 <thead>
   <tr>
       <th>Name</th>
       <th>Price</th>
       <th>Quantity</th>
       <th>Item Total</th>
       <th>          </th>
   </tr>
 </thead>
   {{#shoppingCart}}
   <tbody>
   <tr>
     <img src="" alt="">
     <td>{{ProductName}}</td>
     <td>${{ProductPrice}}</td>
    <td>{{Quantity}}</td>
    <td>${{totalAmt}}</td>
    <td><form action="/deleteItem" method="post">
    <input type="hidden" name="delete" value='{{id}}'>
    <input type="hidden" name="ProductName" value={{ProductName}}>
    <input type="hidden" name="ProductSize" value={{ProductSize}}>
    <input type="hidden" name="productQuantity" value={{productQuantity}}>
    <input type="hidden" name="productID" value={{ProductId}}>
    <input type="hidden" name="itemQuantity" value={{Quantity}}>
    <button class="waves-effect waves-light btn-small red accent-4">Delete</button>
</form></td>
   </tr>
 </tbody>

   {{/shoppingCart}}
</table>

<div class="right-align">
  <h5>Subtotal: ${{sum}}</h5>

  <form action="/checkoutCart" method="post">
    <!-- <input type="hidden" name="productid" value={{id}}> -->
    <input type="hidden" name="ProductName" value={{ProductName}}>
    <input type="hidden" name="ProductSize" value={{ProductSize}}>
    <input type="hidden" name="productQuantity" value={{productQuantity}}>
    <input type="hidden" name="productId" value={{ProductId}}>
    <input type="hidden" name="sum" value={{sum}}>
    <button class="waves-effect waves-light btn-large green accent-4">Proceed to checkout</button>
  </form>

</div>
