<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons|Permanent+Marker|Varela" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="../adminstyles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>
<body>
  <nav>
    <div class="nav-wrapper">
      <a href="../index" class="brand-logo" style='font-family: "Permanent Marker"'>Stylephile</a>
      <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="./productpage">Back to store</a></li>
        <li><a href="./cart"><i class='material-icons'>shopping_cart</i></a></li>
        <li><form action="/logOut" method="post" class="valign-wrapper">
          <a><button class="btn-flat white-text">Log Out</button></a>
        </form></li>
      </ul>
    </div>
  </nav>


  <h1 class="text-white">Thank You!</h1>

  <h2 class="text-white">Order Confirmation</h2>
  {{#order}}
  <h5 class="text-white">Order #: {{orderReference}}</h5>

  <div class="container text-white">
    <div class="col s12 m7">
    <h2 class="header">Your Order Contents</h2>
    <div class="card horizontal">
      <div class="card-stacked">
        <div class="card-content">
          <p>Order #{{orderReference}}</p>
          <p>Your order totaling ${{Total}} will be shipped soon.</p>
        </div>
        <div class="card-action">
          <a href="#">PRINT ORDER</a>
        </div>
      </div>
    </div>
  </div>

  </div>
  {{/order}}

  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>
</body>
