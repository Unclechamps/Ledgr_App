<head>
    <link rel="stylesheet" type="text/css" href="../../storestyles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>
<body>

<nav>
    <div class="nav-wrapper">
      <a href="#" class="brand-logo">Logo</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="./index">Back to home</a></li>
        <li><a href="./cart"><i class='material-icons'>shopping_cart</i></a></li>
        <li><form action="/logOut" method="post">
          <a><button>Logout</button></a>
        </form></li>
      </ul>
    </div>
  </nav>


<div class="container">
<div class="row">
  {{#list}}

    <div class="col s12 m4 l3">

      <div class="card">
        <div class="card-image">
          <img src="{{productURL}}">
          <span class="card-title">{{productName}}</span>

          <form action="/addToCart" method="post">
          <input type="hidden" name="productID" value="{{id}}">
          <input type="hidden" name="name" value="{{productName}}">
          <input type="hidden" name="price" value="{{productPrice}}">
          <input type="hidden" name="size" value="{{productSize}}">
          <input type="hidden" name="color" value="{{productColor}}">
          <button onclick="M.toast({html: 'Added to cart!'})" class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add_shopping_cart</i></button>
        </div>
        <div class="card-content" height="30px">
          <p>Price: ${{productPrice}}  |  Color: {{productColor}}  |  Size: {{productSize}}</p>
            <select class="browser-default" name="quantityAmt">
              <option value="0" disabled selected>Qty</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
            </select>
        </div>
        </form>
      </div>

    </div>
    {{/list}}
  </div>
</div>



</body>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>
